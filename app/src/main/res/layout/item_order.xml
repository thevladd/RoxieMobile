<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="order"
            type="ru.ustal.roxiemobile.domain.model.OrderModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_start_address"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(order.startAddress.city) + ' ' + String.valueOf(order.startAddress.address)}"
                android:textColor="@color/startAddressTextColor" />

            <TextView
                android:id="@+id/tv_end_address"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(order.endAddress.city) + ' ' + String.valueOf(order.endAddress.address)}"
                android:textColor="@color/endAddressTextColor" />

            <TextView
                android:id="@+id/tv_order_time"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{order.orderTime}"
                android:textColor="@color/orderTimeTextColor" />

            <TextView
                android:id="@+id/price"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{order.price.currency}"
                android:textColor="@color/priceTextColor" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
