<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/orders_fragment">

    <fragment
        android:id="@+id/orders_fragment"
        android:name="ru.ustal.roxiemobile.presentation.view.fragments.OrdersFragment"
        android:label="@string/title_orders"
        tools:layout="@layout/fragment_orders">
        <action
            android:id="@+id/action_navigation_orders_to_navigation_order_detail"
            app:destination="@id/order_Detail_Fragment" />
    </fragment>

    <fragment
        android:id="@+id/order_Detail_Fragment"
        android:name="ru.ustal.roxiemobile.presentation.view.fragments.OrderDetailFragment"
        android:label="@string/title_order_detail"
        tools:layout="@layout/fragment_order_detail" />

    <fragment
        android:id="@+id/pixels_fragment"
        android:name="ru.ustal.roxiemobile.presentation.view.fragments.PixelsFragment"
        android:label="@string/title_pixels"
        tools:layout="@layout/fragment_pixels" />

</navigation>